<div class="row">
	<div class="col-12 justify-content-center">
		{{ form_start(form) }}
		<div class="row justify-content-center">
			<div class="col-12 col-md-8">{{ form_row(form.username) }}</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-12 col-md-8">{{ form_row(form.email) }}</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8">{{ form_row(form.password) }}</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8">
				<button class="btn btn-block btn-success">
					{{ button_label|default('Crear') }}</button>
			</div>
		</div>
		{{ form_end(form) }}</div>
</div>
